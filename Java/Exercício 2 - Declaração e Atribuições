public class decla_atribu {
    public static void main(String[] args) {

        int x, y;               // Declaração de variáveis inteiras: x e y.

        int X;                  // Declaração de outra variável inteira X (ex. de case sensitive).

        boolean p, q;           // Declaração de variável lógica.
        float a = 10.5f;        // Declaração de variável do tipo float, que já recebe valor.

        x = 10;                 // atribuição de valor à variável.
        y = x - 38;             // atribuição de valor de - 28 para a variável.

        X = 9 % 2;              // X recebe o resultado da operação, que é igual a 1.

        p = (3 >= 5);           // p recebe o valor de false
        q = (true || false);    // q recebe p vaçpr de true

        System.out.println("x = " + x);             // imprime x = 10 no console
        System.out.println("y = " + y);             //imprime y = -28 no console
        System.out.println("X = " + X);             //imprime X = 1 no console
        System.out.println("p = " + p);             //imprime p = false no console
        System.out.println("q = " + q);             //imprime q = true no console
        System.out.printf("a = %.2f", a*3);         //imprime a = 31,5 no console
             }
        }
